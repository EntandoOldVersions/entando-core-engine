<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns:context="http://www.springframework.org/schema/context"
		xmlns:jee="http://www.springframework.org/schema/jee"
		xmlns:util="http://www.springframework.org/schema/util"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
			http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
			http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
			http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd" xmlns:aop="http://www.springframework.org/schema/aop">
	
	<jee:jndi-lookup id="portDataSource" jndi-name="java:comp/env/jdbc/portDataSource"/>
	
	<jee:jndi-lookup id="servDataSource" jndi-name="java:comp/env/jdbc/servDataSource"/>
	
	<bean id="ApsSystemUtils" class="com.agiletec.aps.system.ApsSystemUtils" init-method="init" >
		<property name="systemParams">
		<map>
			<entry key="logName"><jee:jndi-lookup jndi-name="java:comp/env/logName" /></entry>
			<entry key="logFilePrefix"><jee:jndi-lookup jndi-name="java:comp/env/logFilePrefix" /></entry>
			<entry key="logLevel"><jee:jndi-lookup jndi-name="java:comp/env/logLevel" /></entry>
			<entry key="logFileSize"><jee:jndi-lookup jndi-name="java:comp/env/logFileSize" /></entry>
			<entry key="logFilesCount"><jee:jndi-lookup jndi-name="java:comp/env/logFilesCount" /></entry>
		</map>
		</property>
	</bean>
	
	<util:list id="entandoPortTableClasses">
		<value>org.entando.entando.aps.system.orm.model.portdb.Sysconfig</value>
		<value>org.entando.entando.aps.system.orm.model.portdb.Category</value>
		<value>org.entando.entando.aps.system.orm.model.portdb.LocalString</value>
		<value>org.entando.entando.aps.system.orm.model.portdb.PageModel</value>
		<value>org.entando.entando.aps.system.orm.model.portdb.Page</value>
		<value>org.entando.entando.aps.system.orm.model.portdb.ShowletCatalog</value>
		<value>org.entando.entando.aps.system.orm.model.portdb.ShowletConfig</value>
		<value>org.entando.entando.aps.system.orm.model.portdb.Uniquekeys</value>
	</util:list>
	
	<util:list id="entandoServTableClasses">
		<value>org.entando.entando.aps.system.orm.model.servdb.Group</value>
		<value>org.entando.entando.aps.system.orm.model.servdb.Permission</value>
		<value>org.entando.entando.aps.system.orm.model.servdb.Role</value>
		<value>org.entando.entando.aps.system.orm.model.servdb.RolePermissionReference</value>
		<value>org.entando.entando.aps.system.orm.model.servdb.User</value>
		<value>org.entando.entando.aps.system.orm.model.servdb.UserGroupReference</value>
		<value>org.entando.entando.aps.system.orm.model.servdb.UserRoleReference</value>
		<value>org.entando.entando.aps.system.orm.model.servdb.UserShortcut</value>
		<value>org.entando.entando.aps.system.orm.model.servdb.ApiOAuthConsumer</value>
		<value>org.entando.entando.aps.system.orm.model.servdb.ApiOAuthToken</value>
		<value>org.entando.entando.aps.system.orm.model.servdb.ApiCatalogMethod</value>
		<value>org.entando.entando.aps.system.orm.model.servdb.ApiCatalogService</value>
	</util:list>
	
	<util:map id="databaseTypeDrivers" map-class="java.util.Properties" value-type="java.util.List">
		<entry>
			<key><value>DERBY</value></key>
			<list>
				<value>org.apache.derby.jdbc.EmbeddedDriver</value>
				<value>org.apache.derby.jdbc.ClientDriver</value>
			</list>
		</entry>
		<entry>
			<key><value>POSTGRESQL</value></key>
			<list>
				<value>org.postgresql.Driver</value>
			</list>
		</entry>
		<entry>
			<key><value>MYSQL</value></key>
			<list>
				<value>com.mysql.jdbc.Driver</value>
			</list>
		</entry>
		<entry>
			<key><value>ORACLE</value></key>
			<list>
				<value>oracle.jdbc.OracleDriver</value>
			</list>
		</entry>
		<entry>
			<key><value>SQLSERVER</value></key>
			<list>
				<value>com.microsoft.sqlserver.jdbc.SQLServerDriver</value>
			</list>
		</entry>
	</util:map>
	
	<util:map id="DefaultSqlDump" map-class="java.util.Properties" >
	</util:map>
	
	<bean id="DbInstallerManager" class="org.entando.entando.aps.system.orm.DbInstallerManager" 
			init-method="init">
		<property name="entandoTableMapping">
		<map>
			<entry key="portDataSource"><ref bean="entandoPortTableClasses" /></entry>
			<entry key="servDataSource"><ref bean="entandoServTableClasses" /></entry>
		</map>
		</property>
		<property name="entandoDefaultSqlResources">
		<map>
			<entry key="portDataSource"><value>classpath:sql/entandoPort_data_${db.script.default.marker}.sql</value></entry>
			<entry key="servDataSource"><value>classpath:sql/entandoServ_data_${db.script.default.marker}.sql</value></entry>
		</map>
		</property>
		<property name="defaultSqlDump" ref="DefaultSqlDump" />
		<property name="databaseTypeDrivers" ref="databaseTypeDrivers" />
		<property name="checkOnStartup"><value>${db.startup.check}</value></property>
		<property name="configVersion"><jee:jndi-lookup jndi-name="java:comp/env/configVersion" /></property>
		<property name="protectedBaseDiskRoot" ><jee:jndi-lookup jndi-name="java:comp/env/protectedResourceDiskRootFolder" /></property>
	</bean>
	
</beans>