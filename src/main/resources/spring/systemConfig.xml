<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns:context="http://www.springframework.org/schema/context"
		xmlns:jee="http://www.springframework.org/schema/jee"
		xmlns:util="http://www.springframework.org/schema/util"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
			http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
			http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">
	
	<context:property-placeholder location="WEB-INF/conf/systemParams.properties"/>
	
	<jee:jndi-lookup id="portDataSource" jndi-name="java:comp/env/jdbc/portDataSource"/>
	
	<jee:jndi-lookup id="servDataSource" jndi-name="java:comp/env/jdbc/servDataSource"/>
	
	<bean id="ApsSystemUtils" class="com.agiletec.aps.system.ApsSystemUtils" init-method="init" >
		<property name="systemParams">
		<map>
			<entry key="logName"><jee:jndi-lookup jndi-name="java:comp/env/logName" /></entry>
			<entry key="logFilePrefix"><jee:jndi-lookup jndi-name="java:comp/env/logFilePrefix" /></entry>
			<entry key="logLevel"><jee:jndi-lookup jndi-name="java:comp/env/logLevel" /></entry>
			<entry key="logFileSize"><jee:jndi-lookup jndi-name="java:comp/env/logFileSize" /></entry>
			<entry key="logFilesCount"><jee:jndi-lookup jndi-name="java:comp/env/logFilesCount" /></entry>
		</map>
		</property>
	</bean>
	
	<util:list id="entandoPortTableClasses">
		<value>org.entando.entando.aps.system.orm.portdb.Sysconfig</value>
		<value>org.entando.entando.aps.system.orm.portdb.Category</value>
		<value>org.entando.entando.aps.system.orm.portdb.ContentModel</value>
		<value>org.entando.entando.aps.system.orm.portdb.Content</value>
		<value>org.entando.entando.aps.system.orm.portdb.LocalString</value>
		<value>org.entando.entando.aps.system.orm.portdb.PageModel</value>
		<value>org.entando.entando.aps.system.orm.portdb.Page</value>
		<value>org.entando.entando.aps.system.orm.portdb.Resource</value>
		<value>org.entando.entando.aps.system.orm.portdb.ResourceRelation</value>
		<value>org.entando.entando.aps.system.orm.portdb.ShowletCatalog</value>
		<value>org.entando.entando.aps.system.orm.portdb.ShowletConfig</value>
		<value>org.entando.entando.aps.system.orm.portdb.Uniquekeys</value>
		<value>org.entando.entando.aps.system.orm.portdb.ContentRelation</value>
		<value>org.entando.entando.aps.system.orm.portdb.ContentSearch</value>
		<value>org.entando.entando.aps.system.orm.portdb.WorkContentRelation</value>
		<value>org.entando.entando.aps.system.orm.portdb.WorkContentSearch</value>
	</util:list>
	
	<util:list id="entandoServTableClasses">
		<!-- <value>org.entando.entando.aps.system.orm.portdb.Sysconfig</value> -->
	</util:list>
	
	<bean id="dbCreatorManager" class="org.entando.entando.aps.system.orm.DbCreatorManager" 
			parent="abstractService" >
		<property name="tableMapping">
		<map>
			<entry key="portDataSource"><ref bean="entandoPortTableClasses" /></entry>
			<entry key="servDataSource"><ref bean="entandoServTableClasses" /></entry>
		</map>
		</property>
		<property name="sqlResources">
		<map>
			<entry key="portDataSource"><value>${db.port.script}</value></entry>
			<entry key="servDataSource"><value>${db.serv.script}</value></entry>
		</map>
		</property>
	</bean>
	
</beans>