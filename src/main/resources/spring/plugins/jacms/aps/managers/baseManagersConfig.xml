<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	
	<bean id="jacmsProtectedResourceProvider" class="org.entando.entando.plugins.jacms.aps.servlet.ProtectedResourceProvider" >
		<property name="resourceManager" ref="jacmsResourceManager" />
		<property name="contentAuthorizationHelper" ref="jacmsContentAuthorizationHelper" />
		<property name="userManager" ref="UserManager" />
		<property name="authorizationManager" ref="AuthorizationManager" />
		<property name="urlManager" ref="URLManager" />
		<property name="pageManager" ref="PageManager" />
		<property name="langManager" ref="LangManager" />
		<property name="configManager" ref="BaseConfigManager" />
	</bean>
	
	<!-- Override of the Entando Core PageManager Bean -->
	<bean id="PageManager" class="com.agiletec.plugins.jacms.aps.system.services.page.CmsPageManager" 
			parent="abstractService" >
		<property name="pageDAO" >
			<bean class="com.agiletec.plugins.jacms.aps.system.services.page.CmsPageDAO">
				<property name="dataSource" ref="portDataSource" />
				<property name="widgetTypeManager" ref="WidgetTypeManager" />
				<property name="pageModelManager" ref="PageModelManager" />
			</bean>
		</property>
	</bean>
	
</beans>