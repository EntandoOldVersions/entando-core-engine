<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns:context="http://www.springframework.org/schema/context"
		xmlns:util="http://www.springframework.org/schema/util"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
			http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">
	
	<util:list id="jacmsPortTableClasses">
		<value>org.entando.entando.plugins.jacms.aps.system.orm.portdb.ContentModel</value>
		<value>org.entando.entando.plugins.jacms.aps.system.orm.portdb.Content</value>
		<value>org.entando.entando.plugins.jacms.aps.system.orm.portdb.Resource</value>
		<value>org.entando.entando.plugins.jacms.aps.system.orm.portdb.ResourceRelation</value>
		<value>org.entando.entando.plugins.jacms.aps.system.orm.portdb.ContentRelation</value>
		<value>org.entando.entando.plugins.jacms.aps.system.orm.portdb.ContentSearch</value>
		<value>org.entando.entando.plugins.jacms.aps.system.orm.portdb.WorkContentRelation</value>
		<value>org.entando.entando.plugins.jacms.aps.system.orm.portdb.WorkContentSearch</value>
	</util:list>
	
	<bean id="jacmsOrmComponentConfiguration" class="org.entando.entando.aps.system.orm.EntandoComponentConfiguration">
		<property name="code" value="jacms" />
		<property name="tableMapping">
		<map>
			<entry key="portDataSource"><ref bean="jacmsPortTableClasses" /></entry>
		</map>
		</property>
		<property name="defaultSqlResources">
		<map>
			<entry key="portDataSource"><value>classpath:sql/plugins/jacms/port_data_${db.script.default.marker}.sql</value></entry>
		</map>
		</property>
	</bean>
	
</beans>